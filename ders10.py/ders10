class Person:

    address="bilgi yok"
    def __init__(self,name,lname,address,yil):
        self.name = name
        self.lname = lname
        self.address = address
        self.yil = yil
    def intro(self):
        print("merhaba ben "+self.name)
    def calcute(self):
        return 2024-self.yas

p1 = Person(name="ali",lname="koç",address="karabük",yil="1980")
print(p1)
print(type(p1))
print("benim adresim:",p1.address)
print("benim adim:",p1.name)
print("benim soy adim:",p1.lname)
print("doğum yılım:",p1.yil)
p2 =  Person(name="sefa",lname="çalış",address="karabük",yil="2008")
print(p2)
print("isim:",p2.name,"soy isim:",p2.lname,"adres:",p2.address, "doğum yılı:",p2.yil,"yasim",p2.calcute())
p1.intro()
p2.intro()
p1.hesapla()
p2.hesapla()



class Daire:
    def __init__(self,iki,pi,r):
        self.iki=iki
        self.pi=pi
        self.r=r
p1=Daire(iki=2,pi=3,r=7)
print(p1.iki*p1.pi*p1.r)



class Daire:
    pi = 3.14

    def __init__(self,yaricap):
        self.yaricap = yaricap
    def alan_hesaplama(self):
        return self.pi *(self.yaricap**2)
daire1 = Daire(5)
print(daire1.alan_hesaplama())

class Daire:
    pi = 3.14

    def __init__(self,yaricap):
        self.yaricap = yaricap
    def cevre_hesaplama(self):
        return 2* self.pi * self.yaricap
daire1 = Daire(5)
print(daire1.cevre_hesaplama())

class Square:
    def __init__(self,a):
        self.a=a
    def alan(self):
        return self.a**2
kare = Square (5)
print(kare.alan())
    










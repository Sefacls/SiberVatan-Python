A=[233,45,81,99999,36,90,88,11,61]
def sayiKontrol (sayi):
    sayilar=[int(a) for a in str(sayi)]
    return 1 if len(set(sayilar))==1 else 0
basamak_ayni = []
basmak_farkli = []
for sayi in A:
    if sayiKontrol(sayi):
        basamak_ayni.append(sayi)
    else:
        basmak_farkli.append(sayi)
print("basamakları aynı olanlar:",basamak_ayni)
print("basamakları farklı olanlar:",basmak_farkli)
        
        
def sayiKontrol (sayi):
    rakam_str = str(sayi)
    if len(set(rakam_str))==1:
        return 1
    else:
        return 0
A=[233,45,81,99999,36,90,88,11,61]
for sayi in A (sayi):
    if sayiKontrol(sayi):
        print(f"{sayi}:basamak aynı")
    else:
        print(f"{sayi}:basamak farklı")

